<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="mapper.board">
	<resultMap id="articlesResult" type="articleVO">
    	<result property="id" column="art_id" />
    	<result property="title" column="art_title" />
    	<result property="joinDate" column="art_join_date" />
    	<result property="contents" column="art_contents" />
    	<result property="file" column="art_file" />
    	<result property="important" column="art_important" />
    	<result property="hits" column="art_hits" />
  	</resultMap> 
  
	<resultMap id="filesResult" type="articleFileVO">
	  <result property="id" column="file_id" />
	  <result property="name" column="file_name" />
	  <result property="artId" column="art_id" />
	</resultMap>

  <!-- 모든 공지사항 리스트 선택 -->
  <select id="selectAllArticlesList" resultMap="articlesResult"   >
    <![CDATA[
     SELECT art_id, art_title, art_file, art_hits, art_join_date 
     from article	
    ]]>
  </select>
  
  <!--  -->
  <insert id="insertNewArticle"  parameterType="java.util.Map">
		<![CDATA[
			INSERT into article(art_id, art_title, art_file, art_hits, art_join_date )
			VALUES(#{id}, #{title},	#{file}, #{hits}, #{joinDate})
		]]>      
	</insert>
	
  <select id="selectNewId" resultType="int"  >
  	<!-- SELECT NVL(max(articleNO)+1,0) from t_board	  -->
		<![CDATA[
			SELECT max(art_id)+1 from article	
		]]>
	</select>
	
	<select id="selectArticle" resultMap="articlesResult" parameterType="int">
  <!-- <select id="selectArticle" resultType="articleVO"   parameterType="int"> -->
    <![CDATA[
      SELECT * from article
      where art_id = #{id}		
    ]]>
  </select>
  
  <update id="updateArticle"  parameterType="java.util.Map">
			update article
			set art_title=#{title},	 
			art_contents=#{contents}
 			<!--  <if test="imageFileName!='' and imageFileName!=null">
			  , imageFileName=#{imageFileName}
			</if> -->
			where art_id=#{id}
	</update>
	
	<delete id="deleteArticle"  parameterType="int">
    <![CDATA[
      delete from article
      where id in (
         SELECT id 
         FROM  article
         START WITH art_id = #{id} )
    ]]>      
  </delete>

